
<%= link_to "<< Home", order_index_path %>

<div class="card text-center">
  <div class="card-header bg-primary">
    <h4>Order Number: <%= @order.id %></h4>
  </div>
  <div class="card-body">
    <h5 class="card-title">Order Details:</h5>
		<p>Name: <%= @order.user.first_name %> <%= @order.user.last_name %></p>
  
		<p>Phone Number: <%= @order.user.phone_number %></p>

		<p>Order Date: <%= @order.created_at.strftime("%m/%d/%Y") %></p>

    <p class="text-muted">Payment Type: <%= @payment_type %></p>

    <p class="text-muted">Total Cost Due: $<%= @order.cost %></p>

    <p class="text-muted">Order pickup at: <%= @order.pickup_location %></p>

    <p>Estimated Fill Date: <%= @order.estimate_delivery_date.strftime("%m-%d-%Y") %> <div class="text-muted">** We will contact you when your order is filled to confirm pickup date **</div></p>

		<p><%= link_to "Print", "#", onclick: "window.print();", class: "btn btn-primary" %></p>
  </div>
  <div class="card-footer text-muted">
		<h5>Order qty: <%= @order.qty %> dozen</h5>
  </div>
</div>
